    <packaging>war</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>goTorosIndexServer Maven Webapp</name>
    <url>http://maven.apache.org</url>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
